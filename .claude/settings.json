{
  "permissions": {
    "allow": [
      "cargo *",
      "git *",
      "gh *",
      "curl *",
      "bash *",
      "cat *",
      "ls *",
      "find *",
      "grep *",
      "rg *",
      "head *",
      "tail *",
      "wc *",
      "sort *",
      "mkdir *",
      "touch *",
      "cp *",
      "mv *",
      "chmod *",
      "echo *",
      "sleep *",
      "kill *",
      "pkill *",
      "lsof *",
      "ps *",
      "env *",
      "export *",
      "which *",
      "rustup *",
      "rustc *"
    ],
    "deny": [
      "rm -rf /",
      "rm -rf /*",
      "sudo rm -rf *",
      "cargo publish",
      "docker push",
      "sudo *"
    ]
  }
}
